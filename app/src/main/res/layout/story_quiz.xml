<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".story.StoryQuiz"
    android:padding="@dimen/spacing_margin">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt-question"
        tools:src="@tools:sample/avatars"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/centering_margin"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/img_answer1"
        tools:src="@tools:sample/avatars"
        android:layout_marginTop="@dimen/spacing_margin"
        app:layout_constraintTop_toBottomOf="@+id/txt-question"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/img_answer2"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/img_answer2"
        android:layout_marginTop="@dimen/spacing_margin"
        tools:src="@tools:sample/avatars"
        app:layout_constraintLeft_toRightOf="@+id/img_answer1"
        app:layout_constraintRight_toRightOf="parent"/>
</android.support.constraint.ConstraintLayout>