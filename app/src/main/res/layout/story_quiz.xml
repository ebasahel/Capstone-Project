<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".story.StoryQuiz"
    android:padding="@dimen/spacing_margin">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:id="@+id/img_question"
        android:src="@drawable/cloud"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/centering_margin"
        />

    <TextView android:layout_width="300dp"
              android:layout_height="200dp"
              android:gravity="center"
              android:textSize="@dimen/txt_qn"
              android:textColor="@color/txt_title"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintLeft_toLeftOf="parent"
              android:layout_marginTop="@dimen/centering_margin"
    android:id="@+id/txt_question"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/img_answer1"
        tools:src="@drawable/check"
        android:layout_marginTop="150dp"
        app:layout_constraintBottom_toBottomOf="@id/img_question"
        app:layout_constraintLeft_toLeftOf="parent"/>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/img_answer2"
        android:layout_marginTop="150dp"
        tools:src="@drawable/cross"
        app:layout_constraintBottom_toBottomOf="@+id/img_question"
        app:layout_constraintRight_toRightOf="parent"/>
</android.support.constraint.ConstraintLayout>